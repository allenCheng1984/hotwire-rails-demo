<%# 要掛載 turbo_frame_tag 才會正確觸發 update / destroy 的更新效果 %>
<%= turbo_frame_tag dom_id(tweet) do %>
  <div class="card card-body">
    <div><%= tweet.body %></div>

    <div class="mt-2">
      <%= button_to "Likes (#{tweet.likes_count})", '#', method: :post %>
      <%= button_to "Retweets (#{tweet.retweets_count})", '#', method: :post %>

      <%= link_to "Edit", edit_tweet_path(tweet) %>
    </div>
  </div>
<% end %>
